<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header class="site-header">
    <nav class="header-nav">
      <a href="/goals" class="nav-btn">Home</a>
      <a href="/goals/new" class="nav-btn">Create New</a>
      <% if (typeof user !== 'undefined' && user) { %>
        <span class="nav-user">Welcome, <%= user.username %></span>
     
        <a href="/logout" class="nav-btn">Logout</a>
      <% } else { %>
        <a href="/login" class="nav-btn">Login</a>
        <a href="/register" class="nav-btn">Register</a>
      <% } %>
    </nav>
  </header>
  <h1>Login</h1>
  <form action="/login" method="POST" class="auth-form">
    <% if (error) { %>
      <p class="error-message"><%= error %></p>
    <% } %>
    <label class="form-label">Username: <input type="text" name="username" required></label><br>
    <label class="form-label">Password: <input type="password" name="password" required></label><br>
    <button type="submit" class="submit-btn">Login</button>
  </form>
  <p class="auth-link">Don't have an account? <a href="/register">Register</a></p>
</body>
</html>